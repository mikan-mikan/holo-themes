---
interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<a href={href} class="link-b">
  {title}
</a>

<style>
  .link-b {
    padding: 1rem 1rem;
    border-radius: 1rem;
    text-align: center;
    color: var(--color-primary);
    font-size: 2rem;
    line-height: 1;
    font-weight: 500;
    transition: all 0.3s;
  }

  .link-b:hover {
    text-decoration: none;
    background-color: var(--color-tertiary-light);
  }
</style>
